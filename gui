import tkinter as tk
from tkinter import messagebox

# --- Main Application Class ---
class GreetingTranslatorApp:
    def __init__(self, master):
        self.master = master
        master.title("Greeting Translator")
        master.geometry("300x200")  # Set a fixed window size

        # Dictionary of greetings
        self.greetings = {
            "English": "Hello",
            "Spanish": "Hola",
            "French": "Bonjour",
            "German": "Hallo"
        }

        # --- Introduction Label ---
        self.intro_label = tk.Label(master, text="Hello, select a language to see the greeting", padx=10, pady=10)
        self.intro_label.pack()

        # --- Button Frame (to organize buttons) ---
        self.button_frame = tk.Frame(master)
        self.button_frame.pack(pady=10)

        # --- Create Buttons ---
        self.create_buttons(self.button_frame)

    # --- Method to create the language buttons ---
    def create_buttons(self, parent_frame):
        for language in self.greetings:
            # Create a button for each language
            button = tk.Button(parent_frame,
                               text=language,
                               # Use a lambda to pass the language as an argument to the translator function
                               command=lambda lang=language: self.translate_greeting(lang),
                               width=10)
            button.pack(side=tk.LEFT, padx=5, pady=5) # Place buttons horizontally

    # --- Translator Function ---
    def translate_greeting(self, language):
        # Get the greeting from the dictionary
        greeting = self.greetings[language]

        # Display the translated greeting using a message box
        messagebox.showinfo(f"{language} Greeting", f"The greeting in {language} is:\n\n'{greeting}'")
        print(f"User selected: {language}. Greeting: {greeting}") # Optional: print to console

# --- Main execution block ---
if __name__ == "__main__":
    # Create the main window
    root = tk.Tk()
    # Instantiate the application
    app = GreetingTranslatorApp(root)
    # Start the Tkinter event loop
    root.mainloop()